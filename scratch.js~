/*
 * fs.watch events:
 *    change
 *    rename
*/

var fs = require('fs');
var watcher;
var filer;

module.exports = {
  init: function(path) {
    path = path || './db';

    fs.exists(path, function(truePath) {
      if (!truePath) {
        throw("initial path not found!");
      }

      watcher = fs.watch(path, function(event, filename) {
        console.dir(event);
        console.dir(filename);
      });

      fs.getFiles(path, function() {
        files.forEach(function(file) {
          fs.watchFile(file, function(curr, prev) {
            console.dir(arguments);
          });
        });
      });
    });
  }
}


